{
	"name": "boardctl",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"start": "tsx source/cli.tsx",
		"dev": "tsx watch source/cli.tsx ",
		"debug": "DEBUG=1 tsx source/cli.tsx",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ansi-escapes": "^7.2.0",
		"ink": "workspace:*",
		"react": "^19.2.3"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.7",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"js-yaml": "^4.1.1",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"tsx": "^4.21.0",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
