{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"outDir": "dist",
		"sourceMap": true,
		"module": "ESNext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"target": "ES2022",
		"lib": ["ES2022"],
		"types": ["node", "react"],
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true
	},
	"include":  [
		"source"
	]
}
