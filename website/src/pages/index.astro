<style>
	main {
		width: 100%;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-lg);
	}

	/* Hero Section */
	.hero {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
		padding: var(--spacing-3xl) 0;
		background: linear-gradient(180deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 100%);
	}

	.logo {
		font-size: clamp(0.4rem, 1.5vw, 0.85rem);
		color: var(--color-lazyban-primary);
		font-weight: bold;
		margin-bottom: var(--spacing-lg);
		line-height: 1.2;
		text-shadow: 0 0 20px rgba(121, 160, 201, 0.3);
		overflow-x: auto;
	}

	.tagline {
		font-size: clamp(1.5rem, 4vw, 3rem);
		font-weight: 700;
		margin-bottom: var(--spacing-md);
		color: var(--color-text-primary);
	}

	.subtitle {
		font-size: clamp(1rem, 2vw, 1.5rem);
		color: var(--color-text-secondary);
		max-width: 700px;
		margin: 0 auto var(--spacing-xl);
		line-height: 1.6;
	}

	.hero-actions {
		display: flex;
		gap: var(--spacing-md);
		margin-bottom: var(--spacing-2xl);
		flex-wrap: wrap;
		justify-content: center;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: var(--spacing-xs);
		padding: var(--spacing-md) var(--spacing-xl);
		border-radius: var(--radius-md);
		font-weight: 600;
		font-size: 1.1rem;
		transition: all 0.2s ease;
		border: 2px solid transparent;
	}

	.btn-primary {
		background: var(--color-lazyban-primary);
		color: var(--color-bg-primary);
	}

	.btn-primary:hover {
		background: var(--color-primary);
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.btn-secondary {
		background: transparent;
		color: var(--color-text-primary);
		border-color: var(--color-border);
	}

	.btn-secondary:hover {
		border-color: var(--color-lazyban-primary);
		background: rgba(121, 160, 201, 0.1);
	}

	.hero-demo {
		max-width: 900px;
		margin: 0 auto;
		border-radius: var(--radius-lg);
		overflow: hidden;
		box-shadow: var(--shadow-lg);
		border: 1px solid var(--color-border);
	}

	.hero-demo img {
		width: 100%;
		height: auto;
		display: block;
	}

	/* Features Section */
	.features {
		padding: var(--spacing-3xl) 0;
		background: var(--color-bg-secondary);
	}

	.section-title {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 700;
		text-align: center;
		margin-bottom: var(--spacing-md);
		color: var(--color-text-primary);
	}

	.section-subtitle {
		text-align: center;
		font-size: 1.2rem;
		color: var(--color-text-secondary);
		max-width: 700px;
		margin: 0 auto var(--spacing-2xl);
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: var(--spacing-xl);
		margin-top: var(--spacing-2xl);
	}

	.feature-card {
		background: var(--color-bg-card);
		padding: var(--spacing-xl);
		border-radius: var(--radius-lg);
		border: 1px solid var(--color-border);
		transition: all 0.3s ease;
	}

	.feature-card:hover {
		border-color: var(--color-lazyban-primary);
		box-shadow: var(--shadow-md);
		transform: translateY(-4px);
	}

	.feature-icon {
		font-size: 3rem;
		margin-bottom: var(--spacing-md);
	}

	.feature-card h3 {
		font-size: 1.5rem;
		margin-bottom: var(--spacing-sm);
		color: var(--color-lazyban-primary);
	}

	.feature-card p {
		color: var(--color-text-secondary);
		line-height: 1.6;
	}

	/* Current Features */
	.current-features {
		padding: var(--spacing-3xl) 0;
		background: var(--color-bg-primary);
	}

	.status-badge {
		display: inline-block;
		padding: var(--spacing-xs) var(--spacing-md);
		border-radius: var(--radius-sm);
		font-weight: 600;
		margin: var(--spacing-md) auto var(--spacing-xl);
		text-align: center;
		display: block;
		width: fit-content;
	}

	.status-badge.mvp {
		background: rgba(163, 217, 165, 0.2);
		color: var(--color-lazyban-highlight);
		border: 1px solid var(--color-lazyban-highlight);
	}

	.feature-list {
		list-style: none;
		max-width: 600px;
		margin: 0 auto;
		font-size: 1.2rem;
	}

	.feature-list li {
		padding: var(--spacing-sm) 0;
		color: var(--color-text-secondary);
		border-bottom: 1px solid rgba(85, 85, 85, 0.3);
	}

	.feature-list li:last-child {
		border-bottom: none;
	}

	/* Getting Started */
	.getting-started {
		padding: var(--spacing-3xl) 0;
		background: var(--color-bg-secondary);
	}

	.code-block {
		background: var(--color-bg-primary);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-md);
		padding: var(--spacing-lg);
		margin: var(--spacing-xl) auto;
		max-width: 700px;
		overflow-x: auto;
	}

	.code-block pre {
		margin: 0;
	}

	.code-block code {
		color: var(--color-lazyban-highlight);
		font-size: 1rem;
		line-height: 1.8;
	}

	.keybindings {
		max-width: 700px;
		margin: var(--spacing-2xl) auto 0;
	}

	.keybindings h3 {
		font-size: 1.8rem;
		margin-bottom: var(--spacing-lg);
		text-align: center;
	}

	.keybindings table {
		width: 100%;
		border-collapse: collapse;
		background: var(--color-bg-card);
		border-radius: var(--radius-md);
		overflow: hidden;
	}

	.keybindings thead {
		background: var(--color-bg-highlight);
	}

	.keybindings th,
	.keybindings td {
		padding: var(--spacing-md);
		text-align: left;
		border-bottom: 1px solid var(--color-border);
	}

	.keybindings tbody tr:last-child td {
		border-bottom: none;
	}

	.keybindings tbody tr:hover {
		background: var(--color-bg-highlight);
	}

	kbd {
		display: inline-block;
		padding: 0.2rem 0.5rem;
		background: var(--color-bg-primary);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-sm);
		font-family: var(--font-mono);
		font-size: 0.9em;
		color: var(--color-lazyban-primary);
		margin: 0 0.2rem;
	}

	.muted {
		color: var(--color-text-muted);
		font-size: 0.9rem;
		text-align: center;
		margin-top: var(--spacing-md);
	}

	/* Roadmap */
	.roadmap {
		padding: var(--spacing-3xl) 0;
		background: var(--color-bg-primary);
	}

	.roadmap-timeline {
		max-width: 800px;
		margin: var(--spacing-2xl) auto 0;
		position: relative;
	}

	.roadmap-timeline::before {
		content: '';
		position: absolute;
		left: 20px;
		top: 0;
		bottom: 0;
		width: 2px;
		background: var(--color-border);
	}

	.roadmap-item {
		position: relative;
		padding-left: 60px;
		margin-bottom: var(--spacing-2xl);
	}

	.roadmap-marker {
		position: absolute;
		left: 12px;
		top: 8px;
		width: 18px;
		height: 18px;
		border-radius: 50%;
		background: var(--color-bg-secondary);
		border: 3px solid var(--color-border);
	}

	.roadmap-item.completed .roadmap-marker {
		background: var(--color-lazyban-highlight);
		border-color: var(--color-lazyban-highlight);
	}

	.roadmap-item.current .roadmap-marker {
		background: var(--color-lazyban-primary);
		border-color: var(--color-lazyban-primary);
		box-shadow: 0 0 20px rgba(121, 160, 201, 0.5);
	}

	.roadmap-content {
		background: var(--color-bg-card);
		padding: var(--spacing-lg);
		border-radius: var(--radius-md);
		border: 1px solid var(--color-border);
	}

	.roadmap-item.current .roadmap-content {
		border-color: var(--color-lazyban-primary);
	}

	.roadmap-content h3 {
		font-size: 1.5rem;
		margin-bottom: var(--spacing-md);
		color: var(--color-text-primary);
	}

	.roadmap-content ul {
		list-style: none;
	}

	.roadmap-content li {
		padding: var(--spacing-xs) 0;
		color: var(--color-text-secondary);
	}

	/* Architecture */
	.architecture {
		padding: var(--spacing-3xl) 0;
		background: var(--color-bg-secondary);
	}

	.architecture-diagram {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		gap: var(--spacing-md);
		margin: var(--spacing-2xl) auto;
		max-width: 900px;
	}

	.arch-box {
		background: var(--color-bg-card);
		border: 2px solid var(--color-border);
		border-radius: var(--radius-md);
		padding: var(--spacing-lg);
		min-width: 180px;
		text-align: center;
	}

	.arch-box.interface {
		border-color: var(--color-lazyban-primary);
	}

	.arch-box h4 {
		font-size: 1.2rem;
		margin-bottom: var(--spacing-xs);
		color: var(--color-text-primary);
	}

	.arch-box p {
		color: var(--color-text-muted);
		font-size: 0.9rem;
	}

	.arch-arrow {
		font-size: 2rem;
		color: var(--color-lazyban-primary);
	}

	.arch-implementations {
